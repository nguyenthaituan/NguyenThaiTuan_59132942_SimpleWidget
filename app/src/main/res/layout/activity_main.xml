<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
             xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Tên của bạn: "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText

            android:hint="Nhập tên của bạn tại đây: "
            android:id="@+id/tencuaban"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="Ngày sinh: "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:hint="Nhập ngày sinh của bạn tại đây: "
            android:id="@+id/ngaysinhcuaban"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
                android:text="Giới tính "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <RadioGroup
        android:id="@+id/radioGroup"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/nam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nam" />

        <RadioButton
            android:layout_marginLeft="160dp"
            android:id="@+id/nu"
            android:text="Nữ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RadioGroup>


    <LinearLayout
        android:id="@+id/checkboxgroup"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Sở thích của bạn: "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <CheckBox


            android:id="@+id/xemphim"
            android:text="Xem phim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <CheckBox

            android:id="@+id/nghenhac"
            android:text="Nghe nhạc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <CheckBox

            android:id="@+id/dicafe"
            android:text="Đi cafe với bạn bè"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <CheckBox

            android:id="@+id/homealone"
            android:text="Ở nhà một mình"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <CheckBox

            android:id="@+id/nauan"
            android:text="Vào bếp nấu ăn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Sở thích khác: "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/sothichkhac"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập sở thích khác: " />

        <Button
            android:id="@+id/buttonxacnhan"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:text="Xác nhận"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>